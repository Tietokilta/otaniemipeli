{
  "name": "otaniemipeli",
  "version": "0.5.0",
  "description": "",
  "private": true,
  "packageManager": "pnpm@10.16.1",
  "scripts": {
    "dev": "pnpm --filter frontend dev",
    "build": "pnpm --filter frontend build",
    "start": "pnpm --filter frontend start",
    "lint": "pnpm --filter frontend lint",
    "lint:fix": "pnpm --filter frontend lint-fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm --filter frontend typecheck",
    "clean": "rm -rf .next node_modules && pnpm install && pnpm --filter frontend clean",
    "backend": "docker compose up --build",
    "production:build": "docker compose -f docker-compose.prod.yml up --build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Tietokilta/otaniemipeli.git"
  }
}
